<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-lg-4">
      <h2>Employer Login</h2>
      <% if flash[:alert] %>
        <%= content_tag 'div', flash[:alert], class: 'alert alert-danger' %>
      <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
        <div class="field form-group">
          <%= f.label :email, class: 'col-xs-12 col-lg-4' %>
          <div class="col-xs-12 col-lg-8">
            <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: 'col-xs-12 col-lg-4' %>
          <div class="col-xs-12 col-lg-8">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field form-group">
            <div class="col-lg-offset-4 col-lg-8">
              <div class="checkbox">
                <%= f.label :remember_me do %>
                  <%= f.check_box(:remember_me) + " Remember Me" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end -%>

        <div class="actions">
          <div class="form-group">
            <div class="col-xs-12 col-lg-offset-4 col-lg-8">
              <%= f.submit "Log in", class: 'btn btn-default' %>
            </div>
          </div>
        </div>
      <% end %>

      <%= render "employers/shared/links" %>

    </div>
  </div>
</div>
