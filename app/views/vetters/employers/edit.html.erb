<div class="container">
  <%= form_for @employer, url: vetters_employer_path(@employer), class: 'form-horizontal' do |form| %>
  <div class="form-group">
    <label for="employer[company_name]" class="col-sm-2 control-label">Company Name</label>
    <div class="col-sm-10">
      <input required type="text" name="employer[company_name]" class="form-control" value="<%= @employer.company_name %>">
    </div>
  </div>
  <div class="form-group">
    <label for="employer[name]" class="col-sm-2 control-label">HR Name</label>
    <div class="col-sm-10">
      <input required type="name" name="employer[name]" class="form-control"  value="<%= @employer.name %>">
    </div>
  </div>
  <div class="form-group">
    <label for="employer[email]" class="col-sm-2 control-label">Login E-mail</label>
    <div class="col-sm-10">
      <input required type="email" name="employer[email]" class="form-control"  value="<%= @employer.email %>">
    </div>
  </div>
  <div class="form-group">
    <label for="employer[password]" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="text" name="employer[password]" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update</button>
    </div>
  </div>
  <% end %>
</div>
