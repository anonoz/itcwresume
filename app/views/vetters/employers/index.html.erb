<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>Companies</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="col-xs-2">Company</th> 
            <th class="col-xs-3">Name</th>
            <th><%= link_to "New", new_vetters_companies_recruiter_path %></th>
          </tr>
        </thead>
        <tbody>
          <% @employers.each do |employer| %>
          <tr>
            <td><%= employer.company_name %></td>
            <td><%= employer.name %></td>
            <td>
              <%= link_to "Edit", edit_vetters_companies_recruiter_path(employer) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-6">
      <h3>HRs</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="col-xs-2">Company</th> 
            <th class="col-xs-3">Name</th>
            <th><%= link_to "New", new_vetters_employer_path %></th>
          </tr>
        </thead>
        <tbody>
          <% @employers.each do |employer| %>
          <tr>
            <td><%= employer.company_name %></td>
            <td><%= employer.name %></td>
            <td>
              <%= link_to "Edit", edit_vetters_employer_path(employer) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
</div>
