<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Company</th> 
        <th>Name</th>
        <th>E-mail Address</th>
        <th><%= link_to "New", new_vetters_employer_path %></th>
      </tr>
    </thead>
    <tbody>
      <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.company_name %></td>
        <td><%= employer.name %></td>
        <td><%= employer.email %></td>
        <td>
          <%= link_to "Edit", edit_vetters_employer_path(employer) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
