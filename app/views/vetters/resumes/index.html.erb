<div class="page-header">
  <h2>Pending Resumes: <%= @pending_resumes.count %></h2>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Revision</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pending_resumes.each do |resume| %>
      <tr>
        <td>
          <%= link_to "#{resume.student.name}", resume.file.url, target: '_blank' %>
        </td>
        <td>
          <%= resume.reuploads %>
        </td>
        <td>
          <%= link_to "Approve", approve_vetters_resume_path(resume), method: :patch %>
        </td>
        <td>
          <%= link_to "Reject", edit_vetters_resume_path(resume) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

